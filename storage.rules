rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    match /products/{image} {
      allow read: if true;  // Public images for featured products
      allow write: if request.auth != null;
    }
    match /categories/{image} {
      allow read: if true;
      allow write: if request.auth != null;
    }
  }
}
