rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Categories - public read, admin write
    match /categories/{category} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Brands - public read, admin write
    match /brands/{brand} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Inventory/Products - public read for e-commerce, admin write
    match /inventory/{item} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Orders - anyone can create orders, admin can read/update
    match /orders/{order} {
      allow create: if true;
      allow read, update, delete: if request.auth != null;
    }
    
    // Contact form submissions - anyone can create, only admin reads
    match /contacts/{message} {
      allow create: if true;
      allow read: if request.auth != null;
    }
  }
}
